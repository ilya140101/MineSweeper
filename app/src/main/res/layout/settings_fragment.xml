<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textHeight"
            android:layout_marginTop="100dp"
            android:text="@string/height"
            app:layout_constraintHorizontal_bias="0.185"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/textView" />

        <TextView
            android:id="@+id/textWidth"
            style="@style/textView"
            android:layout_marginTop="40dp"
            android:text="@string/width"
            app:layout_constraintHorizontal_bias="0.185"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/textHeight" />

        <TextView
            android:id="@+id/textCountMine"
            style="@style/textView"
            android:layout_marginTop="52dp"
            android:text="@string/count_mine"
            app:layout_constraintHorizontal_bias="0.202"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/textWidth" />

        <EditText
            android:id="@+id/editHeight"
            android:layout_marginTop="80dp"
            app:layout_constraintHorizontal_bias="0.669"
            app:layout_constraintLeft_toLeftOf="@id/textHeight"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/editText"
             />

        <EditText
            android:id="@+id/editWidth"
            style="@style/editText"
            android:layout_marginTop="44dp"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintLeft_toLeftOf="@id/textWidth"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/editHeight" />

        <EditText
            android:id="@+id/editCountMine"
            style="@style/editText"
            android:layout_marginTop="44dp"
            android:hint="10"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintLeft_toLeftOf="@id/textWidth"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/editWidth" />

        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="32dp"
            android:text="@string/start_button"
            app:layout_constraintStart_toEndOf="@+id/textCountMine"
            app:layout_constraintTop_toBottomOf="@+id/editCountMine" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>